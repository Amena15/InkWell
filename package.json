{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "inkwell",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend dev\"",
    "build": "pnpm --filter frontend build && pnpm --filter backend build",
    "start": "pnpm --filter frontend start",
    "lint": "concurrently \"pnpm --filter frontend lint\" \"pnpm --filter backend lint\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install",
    "db:generate": "pnpm --filter backend prisma generate",
    "db:push": "pnpm --filter backend prisma db push",
    "db:studio": "pnpm --filter backend prisma studio",
    "test": "pnpm --filter frontend test",
    "test:e2e": "pnpm --filter frontend test:e2e"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.6.0"
}
