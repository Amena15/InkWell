{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest", "@types/jest"],
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2020",
    "outDir": "./dist-test",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
